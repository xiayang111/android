<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xiayang="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hallo word"
        android:onClick="doClick"
        />

    <com.applicationdemo.customprogressbar.HorizontalProgressbar
        android:id="@+id/progressBar"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:progress="0"
        android:max="100"
        xiayang:progressbar_reach_color="@color/blue"
        xiayang:progressbar_reach_height="5dp"
        xiayang:progressbar_text_size="20sp"
        xiayang:progressbar_text_color="@color/blue"
        xiayang:progressbar_text_offset="10dp"
        xiayang:progressbar_unreach_color="@android:color/darker_gray"
        xiayang:progressbar_unreach_height="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.applicationdemo.customprogressbar.HorizontalProgressbar
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:progress="50"
        android:max="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.applicationdemo.customprogressbar.HorizontalProgressbar
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:progress="80"
        android:max="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.applicationdemo.customprogressbar.HorizontalProgressbar
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:progress="100"
        android:max="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.applicationdemo.customprogressbar.RoundProgressbar
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:progress="50"
        android:max="100"
        xiayang:progressbar_reach_color="@color/blue"
        xiayang:progressbar_radius="30dp"
        xiayang:progressbar_reach_height="5dp"
        xiayang:progressbar_text_size="20sp"
        xiayang:progressbar_text_color="@color/blue"
        xiayang:progressbar_text_offset="10dp"
        xiayang:progressbar_unreach_color="@android:color/darker_gray"
        xiayang:progressbar_unreach_height="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.applicationdemo.customprogressbar.RoundProgressbar
        android:id="@+id/roundprogressBar"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:progress="0"
        android:max="100"
        xiayang:progressbar_reach_color="@color/blue"
        xiayang:progressbar_radius="60dp"
        xiayang:progressbar_reach_height="5dp"
        xiayang:progressbar_text_size="20sp"
        xiayang:progressbar_text_color="@color/blue"
        xiayang:progressbar_text_offset="10dp"
        xiayang:progressbar_unreach_color="@android:color/darker_gray"
        xiayang:progressbar_unreach_height="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>